<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.howfun.android.lover" android:versionCode="1"
	android:versionName="0.80.00">
	<supports-screens android:smallScreens="true"
		android:normalScreens="true" android:largeScreens="true"
		android:anyDensity="true" />
	<application android:icon="@drawable/icon" android:label="@string/app_name">
		<activity android:name=".MainActivity" android:label="@string/app_name"
			android:theme="@style/BgTransparent" android:screenOrientation="portrait"
			android:configChanges="orientation|keyboardHidden">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity android:name="net.youmi.android.AdActivity"

			android:configChanges="keyboard|keyboardHidden|orientation" />
		<service android:enabled="true" android:name=".MusicService">
			<intent-filter>
				<action android:name="com.howfun.android.MusicService"></action>
			</intent-filter>
		</service>
		<receiver android:name=".MusicReceiver">
			<intent-filter>
				<action android:name="com.howfun.android.MusicReceiver"></action>
			</intent-filter>
		</receiver>

	</application>
	<uses-sdk android:minSdkVersion="7" />

	<!-- 连接网络权限 INTERNET ，用于请求广告(必须)-->
	<uses-permission android:name="android.permission.INTERNET"></uses-permission>
	<!-- 读取手机基本信息权限 READ_PHONE_STATE，用于精确统计用户的机型等信息(必须) -->
	<uses-permission android:name="android.permission.READ_PHONE_STATE" />
	<!-- 读取网络信息权限 ACCESS_NETWORK_STATE，用于识别gprs网络的接入点的情况(必须)-->
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"></uses-permission>
	<!--
		读写sd卡的权限 WRITE_EXTERNAL_STORAGE，用于缓存广告所用到的图片，节省流量
		，并可获得更好的用户体验(所有使用有米android 2.0版本以上sdk的应用都会共享缓存的图片)
	-->
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>
	<!-- 获取用户地理信息权限 ACCESS_FINE_LOCATION，用于帮助精确统计开发者的程序发布之后的用户分布情况 -->
	<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
</manifest> 